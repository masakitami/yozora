<IfModule mod_setenvif.c>
  SetEnvIf Request_URI "\.(jpe?g|png)$" _image_request

	SetEnvIfNoCase User-Agent "Twitterbot|facebookexternalhit|LinkedInBot|Slackbot|Discordbot|Pinterestbot" bot_skip=1
</IfModule>

<IfModule mod_rewrite.c>
  RewriteEngine On

  RewriteCond %{ENV:bot_skip} =1
  RewriteRule ^ - [L]

	RewriteCond %{REQUEST_URI} ^/recruit/assets/img/ogp\.png$ [NC]
  RewriteRule ^ - [L]

  RewriteCond %{HTTP_ACCEPT} image/avif
  RewriteCond %{REQUEST_URI} (?i)(.*)(\.jpe?g|\.png)$
  RewriteCond %{DOCUMENT_ROOT}%1%2.avif -f
  RewriteRule (?i)(.*)(\.jpe?g|\.png)$ %1$2.avif [L,T=image/avif,R]

  RewriteCond %{HTTP_ACCEPT} image/webp
  RewriteCond %{REQUEST_URI} (?i)(.*)(\.jpe?g|\.png)$
  RewriteCond %{DOCUMENT_ROOT}%1%2.webp -f
  RewriteRule (?i)(.*)(\.jpe?g|\.png)$ %1$2.webp [L,T=image/webp,R]
</IfModule>

<IfModule mod_headers.c>
  Header append Vary Accept env=REDIRECT_accept
</IfModule>

<IfModule mod_mime.c>
  AddType image/avif .avif
  AddType image/webp .webp
</IfModule>
